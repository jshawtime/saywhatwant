{
  "name": "say-what-want",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "lsof -ti:3000,3001 | xargs kill -9 2>/dev/null; PORT=3000 next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next export",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen http://localhost:3000",
    "test:local": "TEST_URL=http://localhost:3000 playwright test",
    "test:deployed": "TEST_URL=https://your-deployed-url.pages.dev playwright test",
    "test:setup": "node scripts/test-setup.js",
    "cloudflare:setup": "node scripts/cloudflare-setup.js",
    "cloudflare:git-setup": "node scripts/git-cloudflare-setup.js",
    "cloudflare:deploy": "./scripts/quick-deploy.sh",
    "deploy": "npm run build && wrangler deploy",
    "deploy:all": "npm run worker:deploy && npm run deploy",
    "worker:dev": "cd workers && wrangler dev",
    "worker:deploy": "cd workers && wrangler deploy",
    "manifest:generate": "node scripts/r2-manifest-generator.js",
    "manifest:local": "node scripts/local-video-manifest-generator.js",
    "fetch-kv": "node scripts/fetch-kv-data.js",
    "import-kv": "echo 'Open http://localhost:3000/import-kv-data.html to import the data'"
  },
  "dependencies": {
    "@next/swc-linux-x64-gnu": "14.2.5",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "lucide-react": "^0.400.0",
    "next": "14.2.5",
    "postcss": "^8.4.39",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.600.0",
    "@playwright/test": "^1.56.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "playwright": "^1.56.0",
    "wrangler": "^3.0.0"
  }
}
